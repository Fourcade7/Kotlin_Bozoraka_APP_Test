<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity3">

    <RelativeLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <EditText
            android:padding="7dp"
            android:background="@drawable/edittextbackground"
            android:inputType="number"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:hint="Product id"
            android:layout_toLeftOf="@id/button2"
            android:id="@+id/edittext3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></EditText>
        <androidx.appcompat.widget.AppCompatButton
            android:background="@drawable/buttonbackground"
            android:textColor="@color/white"
            android:layout_centerVertical="true"
            android:text="With id"
            android:textAllCaps="false"
            android:id="@+id/button2"
            android:layout_alignParentEnd="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></androidx.appcompat.widget.AppCompatButton>
    </RelativeLayout>
    <ProgressBar
        android:visibility="gone"
        android:id="@+id/progeressbar3"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></ProgressBar>
    <androidx.cardview.widget.CardView
        android:visibility="gone"
        android:id="@+id/cardview1"
        app:cardCornerRadius="8dp"
        app:cardUseCompatPadding="true"
        app:cardElevation="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <ImageView
                    android:scaleType="centerInside"
                    android:src="@drawable/pr"
                    android:id="@+id/imageview3"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"></ImageView>
                <TextView
                    android:id="@+id/textview3"

                    android:layout_margin="10dp"
                    android:text="Galaxy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"></TextView>

            </LinearLayout>
            <androidx.cardview.widget.CardView
                app:cardCornerRadius="8dp"
                android:layout_alignParentEnd="true"
                app:cardUseCompatPadding="true"
                app:cardElevation="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:padding="8dp"
                    android:src="@drawable/ic_round_favorite_border_24"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"></ImageView>
            </androidx.cardview.widget.CardView>
        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>